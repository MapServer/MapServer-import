include ./Makefile.inc

DIRS=src

all: .header force_look
	cd src; $(MAKE) $(MFLAGS)
	
install: .header
	cd src; make install

.header: include/geocache.h include/util.h
	$(MAKE) clean
	touch .header
	
force_look:
	true

src/.libs/mod_geocache.so: src/mod_geocache.c $(SRCS) include/geocache.h
	$(APXS) -Wc,"$(CFLAGS)" -Iinclude $(CAIRO_INC) $(MERGE_ENABLED) $(CAIRO_ENABLED) $(CURL_CFLAGS) $(XML2_CFLAGS) $(XML2_LIBS) $(CURL_LIBS) $(CAIRO_LIB) -c src/mod_geocache.c $(SRCS)

#install: src/.libs/mod_geocache.so
	#$(APACHECTL) stop
#	$(APXS) -i -a -n geocache src/mod_geocache.la
	#$(APACHECTL) start

clean:
	cd src; $(MAKE) clean
