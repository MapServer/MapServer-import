<?xml version="1.0"?>

<!-- build.xml -->
<project name="MapServer jBox" default="compile">

  <property name="src.dir" value="."/>

  <!-- imported class locations -->
  <property name="netscape.classes" value="."/>
  <property name="sixlegs.classes" value="."/>
  
  <!-- Temporary build directories -->
  <property name="build.dir" value="build"/>
  <property name="build.classes" value="${build.dir}/classes"/>
  <property name="build.lib" value="${build.dir}/lib"/>
  
  <property name="vm.version" value="1.1"/>
  
  <path id="project.class.path">
    <pathelement location="${netscape.classes}"/>
    <pathelement location="${sixlegs.classes}"/>
  </path>

  <!-- Target to create the build directories prior to the -->
  <!-- compile target. -->
  <target name="prepare">
    <mkdir dir="${build.dir}"/>
    <mkdir dir="${build.classes}"/>
    <mkdir dir="${build.lib}"/>
  </target>

  <target name="clean" description="Remove all generated files.">
    <delete dir="${build.dir}"/>
  </target>

  <target name="compile" depends="prepare"
          description="Compiles all source code.">
    <javac srcdir="${src.dir}" destdir="${build.classes}" target="${vm.version}">
      <classpath refid="project.class.path"/>
    </javac>
  </target>

  <target name="jar" depends="compile"
          description="Generates jBox.jar and jBoxPNG.jar in the 'lib' directory.">
    <jar jarfile="${build.lib}/jBox.jar"
         basedir="${build.classes}"
         includes="jBox.class,evalThread.class"/>
    <jar jarfile="${build.lib}/jBoxPNG.jar"
         basedir="${build.classes}"
         includes="jBoxPNG.class,evalThread.class"/>
  </target>

  <target name="zip" depends="compile,jar"
          description="Generates a distribution zip file">
    <zip zipfile="${build.lib}/jBox.zip"
         basedir="."
         includes="*.*"/>
  </target>

  <target name="all" depends="clean,jar,zip"
          description="Cleans, compiles, then builds the JAR file."/>

</project>
